<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
                        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.co.kr.mapper.PostMapper">
	<!-- LAST 3 items -->
	<select id="getLastPost" resultType="com.co.kr.domain.PostDomain" parameterType="hashMap">
		SELECT po_autohr, po_type, po_date, po_img, po_detail
		FROM pjt.post
		ORDER BY po_id DESC LIMIT 3;
	</select>
</mapper>